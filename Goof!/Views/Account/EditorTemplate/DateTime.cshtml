@model DateTime?

@if (!Model.HasValue)
{
    <input type="date" id="@ViewData.TemplateInfo.GetFullHtmlFieldId("")" name="@ViewData.TemplateInfo.GetFullHtmlFieldName("")" />
}
else
{
    <input type="date" id="@Model.Value.ToString("yyyy-MM-dd")" name="@ViewData.TemplateInfo.GetFullHtmlFieldName("")" />
}
